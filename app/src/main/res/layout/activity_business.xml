<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android5777_4390_7178_01.model.entities.Business">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/etPhone"
        android:layout_alignRight="@+id/etPhone"
        android:layout_alignEnd="@+id/etPhone"
        android:id="@+id/etEmail"
        android:text="E-mail" />

    <RadioButton
        android:text="link to our website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="56dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="ID business"
        android:ems="10"
        android:id="@+id/etIdBusiness"
        android:layout_below="@+id/etBusinessName"
        android:layout_alignLeft="@+id/etBusinessName"
        android:layout_alignStart="@+id/etBusinessName" />

    <TextView
        android:text="Business information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:typeface="monospace"
        android:fontFamily="cursive"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/etStreet"
        android:text="Street"
        android:layout_below="@+id/etEmail"
        android:layout_toRightOf="@+id/etCity"
        android:layout_toEndOf="@+id/etCity"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/etCity"
        android:text="City"
        android:layout_alignBaseline="@+id/etStreet"
        android:layout_alignBottom="@+id/etStreet"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/etCountry"
        android:text="Country"
        android:layout_alignBaseline="@+id/etCity"
        android:layout_alignBottom="@+id/etCity"
        android:layout_toLeftOf="@+id/etCity"
        android:layout_toStartOf="@+id/etCity"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text="Business name"
    android:ems="10"
    android:layout_marginTop="25dp"
    android:id="@+id/etBusinessName"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etPhone"
        android:text="Phone"
        android:layout_below="@+id/etIdBusiness"
        android:layout_alignLeft="@+id/etIdBusiness"
        android:layout_alignStart="@+id/etIdBusiness" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/radioButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="18sp"
        android:layout_above="@+id/etCity"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

</RelativeLayout>
